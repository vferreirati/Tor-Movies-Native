<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

    <style name="HeaderTextTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SearchbarTheme" parent="AppTheme">
        <item name="android:background">@drawable/background_search_bar</item>

    </style>

    <style name="SearchbarInputTheme" parent="AppTheme">
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:capitalize">sentences</item>
    </style>

    <style name="CategoryHeaderTheme" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/category_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SeeCategoryMoviesButtonTheme" parent="AppTheme">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/category_header_text_size</item>
    </style>

    <style name="MovieTitleTheme" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieSynopsis">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MovieInfoLabel" parent="MovieSynopsis">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogHeaderTextTheme" parent="HeaderTextTheme">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TorrentInfoLabel" parent="MovieInfoLabel">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
